#!/usr/bin/env ruby

require 'date'

def to_human(n)
  case n
  when 0
    "today"
  when 1
    "yesterday"
  else
    "#{n} days ago"
  end
end

def report(filename)
  mdate = File.mtime(filename).to_date
  days = (Date.today - mdate).to_i

  puts "%20s -- %s" % [filename, to_human(days)]
end

Dir.glob(".cache_*").each do |filename|
  report(filename)
end

